<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shortcut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.example.ScanAndGo.CheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:paddingTop="12px"
            android:text=""
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_back_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnBackSearchScreen"
            android:layout_weight="1"
            android:text="Back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv_wrong_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wrong_label"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text=" Wrong location assets: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_wrong_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_fix_wrong_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnFixWrongLocation"
                android:text="Fix" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_unknown_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unknown_label"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text=" Uknown assets: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_unknown_count"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_missing_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_missing_label"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:text=" Missing assets: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_missing_count"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_missing_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />

    </LinearLayout>

</LinearLayout>
