<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ScanAssets.FirstSceneActivity">


    <TextView
        android:id="@+id/lbl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input location"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <AutoCompleteTextView
        android:id="@+id/tb_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location name"
        android:inputType="text"
        android:completionThreshold="1" />


    <Button
        android:id="@+id/btn_identification"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:onClick="OnIdentification"
        android:text="IDENTIFICATION" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:onClick="OnCheck"
        android:text="CHECK AND FIX ASSETS" />

    <Button
        android:id="@+id/btn_control"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:onClick="OnControlAsset"
        android:text="CONTROL" />

    <Button
        android:id="@+id/btnLogOut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:onClick="btnLogOut"
        android:paddingTop="@dimen/appbar_padding_top"
        android:text="Log Out" />

</LinearLayout>
